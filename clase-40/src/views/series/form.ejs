<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/header') %>
      <button><a href="/series">Volver</a></button>

      <h1>Agregar Serie</h1>

      <form action="/series<%= locals.serie ? "/"+serie.id+"?_method=put": "" %>" method="POST">
        <label for="title">TÃ­tulo</label>
        <div>
          <input type="text" name="title" id="title" required value="<%= locals.serie?.title %>" />
        </div>
        <label for="release_date">Fecha de estreno</label>
        <div>
          <input type="date" name="release_date" id="release_date" required
            value="<%= formatDate(locals.serie?.release_date) %>" />
        </div>
        <label for="end_date">Fecha de fin </label>
        <div>
          <input type="date" name="end_date" id="end_date" required value="<%= formatDate(locals.serie?.end_date) %>" />
        </div>
        <label for="genre_id">Genero </label>
        <div>
          <select name="genre_id" id="genre_id">
            <% for( let i=0; i < genres.length; i++ ) { %>
              <option value="<%= genres[i].id %>" <%=genres[i].id==locals.serie?.genre_id ? "selected" : "" %>>
                <%= genres[i].name %>
              </option>
              <% } %>
          </select>
        </div>
        <div class="mt-5">
          <button class="botonAgregar" type="submit">Agregar</button>
        </div>
      </form>
  </body>

</html>