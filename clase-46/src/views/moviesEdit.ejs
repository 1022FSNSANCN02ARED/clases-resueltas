<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include("partials/head") %>
  </head>

  <body>
    <%- include("partials/header") %>
    <h1 class="titulo">Película a Editar: <%= movie.title %></h1>
    <section class="formulario">
      <form action="/movies/update/<%= movie.id %>?_method=PUT" method="POST">
        <label for="title">Title </label>
        <p>
          <input
            type="text"
            name="title"
            id="title"
            value="<%= movie.title %>"
            required
          />
        </p>
        <label for="rating">Rating </label>
        <p>
          <input
            type="number"
            name="rating"
            id="rating"
            value="<%= movie.rating %>"
            required
          />
        </p>
        <label for="awards">Awards </label>
        <p>
          <input
            type="number"
            name="awards"
            id="awards"
            value="<%= movie.awards %>"
            required
          />
        </p>
        <label for="release_date">Release date </label>
        <p>
          <input
            type="date"
            name="release_date"
            id="release_date"
            value="<%= movie.release_date %>"
            required
          />
        </p>
        <label for="length">Length </label>
        <p>
          <input
            type="number"
            name="length"
            id=""
            value="<%= movie.length %>"
            required
          />
        </p>
        <br />
        <p>
          <button class="botonAgregar" type="submit">Actualizar</button>

          <a class="botonVolver" href="/movies">Listado de Películas</a>
        </p>
      </form>
    </section>
  </body>
</html>
